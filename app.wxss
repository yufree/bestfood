/* 全局样式 */
page {
  background: linear-gradient(180deg, #e0f2fe 0%, #eef2ff 30%, #f9fafb 60%, #eff6ff 100%);
  font-family: -apple-system, BlinkMacSystemFont, "Helvetica Neue", Helvetica, "Segoe UI", Arial, sans-serif;
  color: #111827;
}

/* 通用样式 */
.container {
  padding: 20rpx;
}

.card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 10rpx 24rpx rgba(15, 23, 42, 0.06);
  border: 1rpx solid rgba(148, 163, 184, 0.25);
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  color: #1f2937;
}

.section-subtitle {
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 16rpx;
}

/* 按钮样式 */
.btn-primary {
  background: #3b82f6;
  color: white;
  border-radius: 999rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  border: none;
}

.btn-secondary {
  background: rgba(59, 130, 246, 0.08);
  color: #1d4ed8;
  border-radius: 999rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  border: 1rpx solid rgba(59, 130, 246, 0.4);
}

.btn-active {
  background: #3b82f6;
  color: white;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
}

.tag-fruit {
  background: rgba(254, 243, 199, 0.8);
  color: #c2410c;
  border: 1rpx solid rgba(249, 115, 22, 0.4);
}

.tag-vegetable {
  background: rgba(220, 252, 231, 0.8);
  color: #166534;
  border: 1rpx solid rgba(22, 163, 74, 0.4);
}

.tag-peak {
  background: rgba(22, 163, 74, 0.08);
  color: #15803d;
}

.tag-imported {
  background: rgba(59, 130, 246, 0.08);
  color: #1d4ed8;
}

/* 评分样式 */
.score {
  color: #f97316;
  font-weight: 600;
  font-size: 32rpx;
}

.score-text {
  color: #6b7280;
  font-size: 24rpx;
}

/* 加载动画 */
.loading {
  text-align: center;
  padding: 40rpx;
  color: #6b7280;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #6b7280;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

/* 列表样式 */
.item-list {
  display: flex;
  flex-direction: column;
}

.item-card {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 搜索框样式 */
.search-bar {
  background: white;
  border-radius: 999rpx;
  padding: 16rpx 24rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.search-input {
  flex: 1;
  margin-left: 16rpx;
  font-size: 28rpx;
}

/* 筛选标签 */
.filter-chips {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.chip {
  padding: 12rpx 24rpx;
  border-radius: 999rpx;
  background: rgba(15, 23, 42, 0.03);
  color: #6b7280;
  font-size: 24rpx;
  border: 1rpx solid transparent;
}

.chip-active {
  background: rgba(59, 130, 246, 0.08);
  border-color: rgba(59, 130, 246, 0.4);
  color: #1d4ed8;
}